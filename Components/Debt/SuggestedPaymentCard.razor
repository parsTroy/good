@using good.Models
@using good.Utils
@using Microsoft.AspNetCore.Components
@namespace good.Components.Debt

@{
    var TotalMinimumPayment = DebtCalculations.GetTotalEffectiveMinimumPayment(Debts);
    var suggestedAmounts = new[]
    {
        Math.Round(TotalMinimumPayment * 1.25m),
        Math.Round(TotalMinimumPayment * 1.5m),
        Math.Round(TotalMinimumPayment * 2m)
    };
    var multipliers = new[] { 1.25, 1.5, 2.0 };
    var labels = new[] { "Good", "Better", "Best" };
    var badgeColors = new[] {
        "bg-brandyellow text-white",
        "bg-brandred text-white",
        "bg-brandgreen text-white"
    };
}

<div class="bg-white shadow-lg rounded-2xl mb-12 px-8 py-8 w-full max-w-3xl mx-auto flex flex-col items-center" aria-label="Suggested Monthly Payment">
    <div class="flex items-center space-x-3 mb-6">
        <!-- Lightbulb Icon -->
        <svg class="w-7 h-7 text-brandyellow" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path d="M9 18h6M10 22h4M12 2a7 7 0 0 0-7 7c0 2.386 1.053 4.507 2.828 5.828A4 4 0 0 1 9 17h6a4 4 0 0 1 1.172-2.172C17.947 13.507 19 11.386 19 9a7 7 0 0 0-7-7z"/></svg>
        <span class="text-2xl font-extrabold text-brandblue">Suggested Monthly Payment</span>
    </div>
    <div class="w-full flex flex-col md:flex-row md:items-center md:justify-between mb-8">
        <div>
            <p class="text-base text-brandmuted mb-1">Your current minimum payment:</p>
            <p class="text-3xl font-extrabold text-brandblue5">@TotalMinimumPayment.ToString("C")</p>
        </div>
        <div class="flex items-center space-x-2 mt-4 md:mt-0">
            <!-- Calculator Icon -->
            <svg class="w-6 h-6 text-brandgreen" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><rect x="3" y="4" width="18" height="18" rx="2"/><path d="M8 2v4M16 2v4M3 10h18"/></svg>
        </div>
    </div>
    <div class="w-full grid grid-cols-1 sm:grid-cols-3 gap-6 mb-8" aria-live="polite">
        @for (int i = 0; i < suggestedAmounts.Length; i++)
        {
            <div class="bg-brandgray rounded-xl p-5 flex flex-col items-center">
                <div class="flex items-center justify-between w-full mb-2">
                    <span class="inline-block px-3 py-1 rounded-full text-xs font-bold @badgeColors[i]">@labels[i]</span>
                    <span class="text-xs text-brandmuted font-bold">@multipliers[i]x</span>
                </div>
                <p class="text-2xl font-extrabold text-brandblue">@suggestedAmounts[i].ToString("C")</p>
                <div class="flex items-center space-x-1 mt-2">
                    <!-- TrendingUp Icon -->
                    <svg class="w-4 h-4 text-brandgreen" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path d="M3 17l6-6 4 4 8-8"/></svg>
                    <span class="text-xs text-brandmuted font-bold">+@((suggestedAmounts[i] - TotalMinimumPayment).ToString("C")) extra</span>
                </div>
            </div>
        }
    </div>
    <div class="w-full bg-brandbluebg rounded-xl p-4 mt-2" aria-live="polite">
        <p class="text-base text-brandblue5 font-bold">
            <span class="mr-1">ðŸ’¡ Pro tip:</span> Paying just <span class="text-brandgreen">@suggestedAmounts[2].ToString("C")</span> instead of <span class="text-brandblue5">@TotalMinimumPayment.ToString("C")</span> could save you years of payments and thousands in interest!
        </p>
    </div>
</div>

@code {
    [Parameter] public List<Debt> Debts { get; set; } = new();
} 